@model Product
@{
    
}

<form method = "post">
    
      <input type="hidden" input asp-for ="Id"/>
    
   
    <div class ="border p-3">
        @*<div asp-validation-summary = "ModelOnly" class = "text-danger"></div>*@

        <div class = "form-group row">
            <h2 class = "text-info pl-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                       <label asp-for ="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for = "Name" class = "form-control"/>
                       
                    </div>

                </div>
               @* Price*@
                <div class="form-group row">

                    <div class="col-4">
                       <label asp-for = "Price"></label>
                    </div>
                    <div class="col-8">
                       <input asp-for = "Price" class = "form-control"/>
                      
                    </div>

                </div>

              @*  Description*@
               <div class="form-group row">

                    <div class="col-4">
                       <label asp-for = "Description"></label>
                    </div>
                    <div class="col-8">
                       <textarea asp-for = "Description"  class = "form-control summernote"></textarea>
                     
                    </div>

                </div>

                 @*  DropDown*@
               <div class="form-group row">

                    <div class="col-4">
                       <label asp-for = "CategoryId"></label>
                    </div>
                    <div class="col-8">
                       <input asp-for = "Category.Name" class = "form-control"/>
                    </div>

                </div>


                <div class="form-group row">

                    <div class="col-4">
                       <label asp-for = "ApplicationId"></label>
                    </div>
                    <div class="col-8">
                       <input asp-for = "Application.Name" class = "form-control"/>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                           
                                <button type = "submit" class =" btn btn-danger w-100">Delete</button>
                        </div>
                        <div class="col">
                            <a asp-action = "Index" class = "btn btn-success w-100 ">Back</a>                           
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
                @if(Model.Id != 0)
                {
                    <img src ="@WC.ImagePath@Model.Image" width = "100%" style= "border-radius:5px"/> 
                }
            </div>
        </div>
    </div>
</form>

@section scripts{
    @{<partial name = "_ValidationScriptsPartial"  />}

    
    }
    <script>
   $(document).ready(function() {
        $('.summernote').summernote({
            heigt = 250,
            disable = true
        });
    });
   
    </script>

