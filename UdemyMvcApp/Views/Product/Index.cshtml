@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class = "container p-3">
    <div class= "row p-4">
     <div class="col-6">
           <h2 class ="text-primary">Product List</h2>
     </div>
       <div class = "col-6 text--right">
         <a  asp-action = "UpSert" class = "btn btn-primary">
         <i class="fas fa-plus"></i> &nbsp; Create New Product
         </a>
        
      </div>
    </div>
     
      <br />
    @if(@Model.Count() > 0)
    {
        <table class = "table table-bordered table-striped" style = "width:100%">
            <thead>
                <tr>
                <th>
                   Product
                </th>
                <th>
                    Price
                </th>
                 <th>
                   Category
                </th>
                 <th>
                  Application
                </th>
                <th></th>
                </tr>
            </thead>
            @foreach(var obj in @Model)
            {
                <tr>
                    <td style="width:20%">@obj.Name</td>
                    <td style= "width:10%">@obj.Price</td>
                    <td style="width:20%">@obj.Category.Name</td>                   
                    <td style= "width:20%">@obj.Application.Name</td>                    
                    <td class = "text-center">
                        <div class = "w-75 btn-group" role = "group">
                             <a  asp-route-Id ="@obj.Id" asp-action = "UpSert" class = "btn btn-primary mx-2">
                             <i class="fas fa-edit"></i> &nbsp; 
                             </a>
                              <a  asp-route-Id ="@obj.Id" asp-action = "Delete" class = "btn-danger mx-2 w-50">
                               <i class="fas fa-trash-alt"></i> &nbsp; 
                              </a>
                        </div>
                    </td>
                </tr>
            }
            <tbody>

            </tbody>
        </table>

       
    }
    else{
        <p>No Product Exists.</p>
    }

</div>

